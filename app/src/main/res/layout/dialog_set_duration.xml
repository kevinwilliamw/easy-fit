<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="20dp">

    <TextView
        android:id="@+id/textDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:text="Duration"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="18dp"/>

    <EditText
        android:id="@+id/editDurationHour"
        android:layout_below="@id/textDuration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:hint="hour"
        android:ems="2"
        android:inputType="number"/>

    <TextView
        android:id="@+id/texthr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/editDurationMinute"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_toEndOf="@id/editDurationHour"
        android:text="hr"
        android:textSize="16dp" />

    <EditText
        android:id="@+id/editDurationMinute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textDuration"
        android:layout_toEndOf="@id/texthr"
        android:layout_marginBottom="15dp"
        android:hint="min"
        android:ems="2"
        android:inputType="number" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/editDurationMinute"
        android:layout_marginBottom="10dp"
        android:layout_marginHorizontal="10dp"
        android:layout_toEndOf="@id/editDurationMinute"
        android:text="min"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/textCalBurn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editDurationHour"
        android:layout_marginBottom="15dp"
        android:text="Calories Burned"
        android:textSize="18dp"
        android:textColor="@color/black"
        android:textStyle="normal" />

    <TextView
        android:id="@+id/textCalBurnNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/textCalBurn"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="5dp"
        android:text="0000 kcal"
        android:textSize="22dp"
        android:textStyle="bold" />

</RelativeLayout>